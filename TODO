async function fetchPosts(){
   loads.loadPosts = true
   const {data, error} = await supabase.from('followers')
      .select('whos_following(*), profiles:whos_following(*), profiles:whos_following(*)')
      .eq('who_followed', session.data.session.user.id)
      // .order('created_at', {ascending: false})
   if(!error){
      posts = data
      console.log(data);
      loads.loadPosts = false
   } else {
      errorLog.value = error
      loads.loadPosts = false
      console.log(error);
      throw Error(error)
   }
}